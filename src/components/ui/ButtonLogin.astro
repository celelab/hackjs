---
import GithubSVG from '../icons/Github.astro'
import Typography from '../Typography.astro'

const { text = 'Iniciar sesi√≥n' } = Astro.props
---

<button id="login" class='flex items-center gap-2 text-gray-900 bg-white hover:bg-yellow-300 font-bold rounded-lg text-sm px-5 py-2.5 ms-2'>
  <GithubSVG width='1rem' height='1rem' />
  <Typography variant="body" color="black">{text}</Typography>
</button>

<script>
  import { signIn } from 'auth-astro/client'
  const $login = document.querySelector("#login")
  if ($login) $login.onclick = () => signIn("github")
</script>
